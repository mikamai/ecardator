!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %title= @title
  %body
    %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
      = pre_header_template
      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
        %tr
          %td#maintable{:width => "600"}
            %img{:border => "0", :height => "10", :src => "http://static.contactlab.it/spacer.gif", :style => "display: block; margin: 0; padding: 0;", :width => "1"}/
        %tr
          %td#maintable{:align => "center", :style => "font-family: arial; font-size: 10px; line-height: 13px; color: #727272", :width => "600"}
            / init:ecovu
            = I18n.t('mikamai.browser_view_1').html_safe
            %a{:href => "${online_version_url}$", :style => "font-family: arial; font-size: 10px; line-height: 13px;"}= I18n.t('mikamai.browser_view_2').html_safe
            / end:ecovu
        %tr
          %td#maintable{:width => "600"}
            %img{:border => "0", :height => "10", :src => "http://static.contactlab.it/spacer.gif", :style => "display: block; margin: 0; padding: 0;", :width => "1"}/
        %tr
          %td#maintable{:bgcolor => "", :width => "600"}
            -# = @link.empty? ? no_image_link_template : image_link_template
        %tr
          %td#maintable{:width => "600"}
            %img{:border => "0", :height => "10", :src => "http://static.contactlab.it/spacer.gif", :style => "display: block; margin: 0; padding: 0;", :width => "1"}/
          %tr
            %td{:align => "center", :width => "600"}
              %a{:href => "http://www.facebook.com/mikamai", :target => "_blank"}
                %img{:border => "0", :src => "http://static.contactlab.it/mikamai/social/icona_facebook.jpg", :style => "display:inline; margin: auto;"}/
              %a{:href => "https://twitter.com/mikamai", :target => "_blank"}
                %img{:border => "0", :src => "http://static.contactlab.it/mikamai/social/icona_twitter.jpg", :style => "display: inline; margin: auto;"}/
              %a{:href => "http://instagram.com/mikamai", :target => "_blank"}
                %img{:border => "0", :src => "http://static.contactlab.it/mikamai/social/icona_instagram.jpg", :style => "display: inline; margin: auto;"}/
              %a{:href => "http://www.youtube.com/mikamai", :target => "_blank"}
                %img{:border => "0", :src => "http://static.contactlab.it/mikamai/social/icona_youtube.jpg", :style => "display: inline; margin: auto;"}/
        %tr
          %td#maintable{:align => "center", :style => "font-family: arial; font-size: 10px; line-height: 13px; color: #727272", :width => "600"}
            %br/
            = I18n.t('mikamai.footer_1').html_safe
            %a{:href => "mailto:no-reply@news.mikamai.com"} no-reply@news.mikamai.com
            = I18n.t('mikamai.footer_1_2').html_safe
            %br/
            -# = forward_template if forward_to_a_friend?
        %tr
          %td#maintable{:align => "center", :style => "font-family: arial; font-size: 10px; line-height: 13px; color: #727272", :width => "600"}
            %br/
            = I18n.t('mikamai..footer_2').html_safe
            = I18n.t('mikamai..footer_3').html_safe
            %a{:href => "http://www.mikamai.com?url=info.html&cmp=int_ecard", :target => "_blank"}
              = I18n.t('mikamai..legal_informations').html_safe
